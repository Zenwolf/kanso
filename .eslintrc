{
    "extends": "eslint:recommended",

    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },

    "ecmaFeatures": {
        "modules": true
    },

    "globals": {
        "__DEV__": true
    },

    "rules": {
        "eol-last": [2],
        "global-strict": [0],
        "new-cap": [0],
        "no-alert": [2],
        "no-console": [2],
        "no-multi-spaces": [2],
        "no-trailing-spaces": [2],
        "no-unused-vars": [2, { "args": "none" }],
        "no-use-before-define": [2, "nofunc"],
        "quotes": [2, "single", "avoid-escape"],
        "strict": [2, "global"]
    }
}
